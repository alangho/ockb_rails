<% list_categories.each do |category| %>

	<% if category.id % 3 == 1 %>
		<div class = "row">
			<div class="col-xs-6 col-sm-4">
				<h4><%= link_to category.title, category %></h4>
				<p><%= category.description %></p>
			</div> 
	<% end %>

	<% if category.id % 3 == 2 %>
		<div class="col-xs-6 col-sm-4">
			<h4><%= link_to category.title, category %></h4>
			<p><%= category.description %></p>
		</div> 
	<% end %>

	<% if category.id % 3 == 0 %>
		<div class="clearfix visible-xs"></div>
			<div class="hidden-xs col-xs-6 col-sm-4 category">
				<h4><%= link_to category.title, category %></h4>
				<p><%= category.description %></p>
			</div> 
		</div>
		
		<div class = "row">
        	<br>
        </div>
	<% end %>

<% end %>